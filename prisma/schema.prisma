generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BeaconUsage {
  id        Int      @id @default(autoincrement())
  userId    String
  endpoint  String
  timestamp DateTime @default(now())
  cdtHash   String?
  status    String
  meta      Json?

  @@index([endpoint, timestamp])
  @@index([userId, timestamp])
}
